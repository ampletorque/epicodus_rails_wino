<% content_for(:title, "Wines in Wino") %>

<div class ="container">
  <h1>Wines</h1>

    <ul>
      <% @wines.each do |wine| %>
      <li><%= link_to wine.name, wine_path(wine) %></li>
      <% end %>
    </ul>

      <p><%= link_to "alphabetical order", wines_path(@wines_alpha) %></p>
      <p><%= link_to "date order", wines_path(@wines_date) %></p>
      <p><%= sortable "rating order", wines_path(@wines_path) %></p>


    <p>
      <%= link_to "Add Wine", new_wine_path(@wine), :class => "btn btn-success" %>
    </p>
</div>
